<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup Condition="'$(Configuration)' == 'Debug'">
        <DockerfileRunEnvironmentFiles>local.env</DockerfileRunEnvironmentFiles>
        <DockerfileBuildArguments>--build-arg PROJECT_BUILD_CONFIGURATION=Debug</DockerfileBuildArguments>
    </PropertyGroup>
    <PropertyGroup Condition="'$(Configuration)' == 'Release'">
        <DockerfileBuildArguments>--build-arg PROJECT_BUILD_CONFIGURATION=Release</DockerfileBuildArguments>
    </PropertyGroup>
    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <AzureFunctionsVersion>v4</AzureFunctionsVersion>
    </PropertyGroup>
    <ItemGroup>
      <Content Include="host.json">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </Content>
    </ItemGroup>
    <ItemGroup>
        <PackageReference Include="Microsoft.NET.Sdk.Functions" Version="4.0.1" />
        <PackageReference Include="Microsoft.VisualStudio.Azure.Containers.Tools.Targets" Version="1.14.0" />
    </ItemGroup>
</Project>
